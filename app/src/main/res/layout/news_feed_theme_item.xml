<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/horizontal_news_feed_item_width"
    android:layout_height="@dimen/horizontal_news_feed_item_height"
    android:layout_margin="@dimen/horizontal_news_feed_item_margin" >

    <ImageView
        android:id="@+id/news_feed_candid_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/news_feed_caption_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>