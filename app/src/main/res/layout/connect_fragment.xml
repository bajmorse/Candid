<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/connect_fragment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.app.Connect.ConnectFragment" >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sticky_friends"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sticky_friends_height"
        android:padding="5dp"
        android:background="@color/offWhite" />

    <View
        android:id="@+id/friends_separator"
        android:layout_below="@id/sticky_friends"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/mediumOrchid" />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/friends_separator"
        android:id="@+id/friends_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp" />

</RelativeLayout>
